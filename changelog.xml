<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet id="jfall-0" author="dvb">
		<createTable tableName="user">
			<column name="id" type="bigint">
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="nick" type="varchar(255)"/>
		</createTable>
	</changeSet>

	<changeSet id="jfall-0a" author="dvb">
		<renameColumn tableName="user" oldColumnName="nick" newColumnName="nickname"/>
	</changeSet>
 
	<changeSet id="jfall-1" author="dvb">
		<createTable tableName="message">
			<column name="id" type="bigint">
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="body" type="varchar(1024)"/>
			<column name="author" type="int"/>
		</createTable>
		<addForeignKeyConstraint 
			constraintName="fk_address_person"
			baseTableName="message" baseColumnNames="author"
			referencedTableName="user" referencedColumnNames="id"
		/>
	</changeSet>

</databaseChangeLog>
